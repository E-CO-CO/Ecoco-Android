<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/bg_rect_blue_charcoal_radius20"
    android:orientation="horizontal"
    android:padding="14dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_custom_toast"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_rect_arsenic_radius100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_custom_toast"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@color/spring_green"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_custom_toast"
            app:layout_constraintEnd_toEndOf="@id/cl_custom_toast"
            app:layout_constraintStart_toStartOf="@id/cl_custom_toast"
            app:layout_constraintTop_toTopOf="@id/cl_custom_toast">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_check"
                android:backgroundTint="@color/blue_charcoal" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_custom_toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/s_c_dream5"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cl_custom_toast"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="아티클을 북마크 했어요!" />
</androidx.constraintlayout.widget.ConstraintLayout>
