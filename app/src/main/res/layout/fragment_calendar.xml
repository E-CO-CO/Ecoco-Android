<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.view.main.CalendarFragment">

    <ImageView
        android:id="@+id/iv_calendar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/ic_article_logo"
        app:layout_constraintEnd_toStartOf="@id/tv_calendar_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/s_c_dream7"
        android:text="@string/title_calendar"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_calendar_logo"
        app:layout_constraintStart_toEndOf="@id/iv_calendar_logo"
        app:layout_constraintTop_toTopOf="@id/iv_calendar_logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_rect_han_purple_radius50"
        android:fontFamily="@font/s_c_dream6"
        android:text="@string/content_calenar_validate"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_calendar_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_calendar_title" />


    <CalendarView
        android:id="@+id/cv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_calendar_title" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_calendar_deco"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="30dp"
        android:background="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_calendar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_canlendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_calendar_deco"
        tools:listitem="@layout/item_validate_list" />

    <ImageView
        android:id="@+id/iv_calendar_ecoco"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginStart="304dp"
        android:background="@drawable/ic_egoo_character"
        android:rotation="318"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>