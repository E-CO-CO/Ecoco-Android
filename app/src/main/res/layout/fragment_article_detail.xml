<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.view.main.ArticleDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_article_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_article_detail_nsv_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iv_article_detail_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_article_detail_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/s_c_dream5"
                android:text="텀블러 효과적으로 쓰는 법"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_article_detail_arrow"
                app:layout_constraintStart_toEndOf="@id/iv_article_detail_arrow"
                app:layout_constraintTop_toTopOf="@id/iv_article_detail_arrow" />


            <ImageView
                android:id="@+id/iv_article_detail_bookmark"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="40dp"
                android:background="@drawable/ic_bookmark_done"
                app:layout_constraintBottom_toTopOf="@id/iv_article_detail_thumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/iv_article_detail_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_margin="30dp"
                android:background="@drawable/img_article_test1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_article_detail_main_title" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_article_detail_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_article_detail_thumbnail">

                <TextView
                    android:id="@+id/tv_article_detail_editor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/s_c_dream5"
                    android:text="@string/title_editor"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_article_detail_editor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/s_c_dream7"
                    android:text="에코코"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_article_detail_editor_title"
                    app:layout_constraintStart_toEndOf="@id/tv_article_detail_editor_title"
                    app:layout_constraintTop_toTopOf="@id/tv_article_detail_editor_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tv_article_detail_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/s_c_dream5"
                android:gravity="center"
                android:text="매일 쓰는 텀블러, 더 효과적으로!"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_article_detail_editor" />


            <TextView
                android:id="@+id/tv_article_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/s_c_dream5"
                android:gravity="center"
                android:text="2023-08-30"
                android:textColor="@color/grey"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_article_detail_sub_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_article_detail_deco_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_article_detail_date" />

            <TextView
                android:id="@+id/tv_article_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:fontFamily="@font/s_c_dream4"
                android:gravity="center"
                android:lineSpacingExtra="12dp"
                android:text="내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요 내용이 들어갈 칸이에요"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_article_detail_deco_line" />

            <ImageView
                android:id="@+id/iv_article_imge"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/img_article_test3"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_article_detail_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>